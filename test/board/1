func Test(t *testing.T) {
    g := Goblin(t)
    g.Describe ("Creating a Board of any size", func() {
	g.It("should create board size of 3", func(){
	     game := board.Game{
               Size: 3,
	       AvailableSpots: 9,
	     }
	     b := game.Create(3) 
	     g.Assert(len(b)).Equal(9)
 	})

	g.It("should create a 4 size board", func() {
	     game := board.Game{
               Size: 4,
	       AvailableSpots: 16,
	     }
	    b := game.Create(4)
	    g.Assert(len(b)).Equal(16)
	})
    })

